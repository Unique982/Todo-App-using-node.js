<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
<title><%= pageTitle %></title>
    <!-- Bootstrap CSS v5.2.1 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <div class="container mt-3 py-5 "style="font-family:'Times New Roman', Times, serif;">
      <div class="card mb-4">
          <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Update Task
              </h6>
          </div>
          <div class="card-body">
            <form action="/edit" method="POST">
              <input type="hidden" name="id" value="<%= task._id %>">
              <div class="form-group mt-2">
                <label for="">User Name</label>
                <input type="text" name="username" value="<%= task.username %>" class="form-control">
              </div>
              <div class="form-group mt-2">
                <label for="">Title</label>
                <input type="text" name="title" value="<%= task.title %>" class="form-control">
              </div>
              <div class="form-group mt-2">
                <label for="">Description</label>
                <textarea name="description" id="" class="form-control"><%= task.description %></textarea>
              </div>
              <div class="form-group mt-2">
                <label for="">Phone</label>
              <input type="text" name="phone" value="<%= task.phone %>" class="form-control">
              </div>
              <div class="form-group mt-2">
                <label for="">Date</label>
              <input type="date" name="date" value="<%= task.date.toISOString().split('T')[0] %>" class="form-control">
              </div>
              <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script src="../node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
